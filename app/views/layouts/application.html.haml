!!!
%html
  %head
    %title ScaffoldApp
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag :defaults, "rails.validations"
    = csrf_meta_tags
  %body
    %header.navbar.navbar-fixed-top.navbar-inverse
      .navbar-inner
        .container
          / = link_to "Rails App", '#', id: "logo"

          %nav
            = link_to image_tag( 'rails.png'), 'http://rubyonrails.org'
            %ul.nav.pull-right
              %li= link_to "Home",    home_path
              %li= link_to "Help",    '#'
              %li= link_to "Sign in", signin_path
    .container
      = yield
